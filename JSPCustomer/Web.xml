<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Login Servlet -->
    <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.example.rider.servlet.LoginServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>
    <!-- Accept Order Servlet -->
    <servlet>
        <servlet-name>AcceptOrderServlet</servlet-name>
        <servlet-class>com.example.rider.servlet.AcceptOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcceptOrderServlet</servlet-name>
        <url-pattern>/acceptOrder</url-pattern>
    </servlet-mapping>

    <!-- Update Status Servlet -->
    <servlet>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <servlet-class>com.example.rider.servlet.UpdateStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <url-pattern>/updateStatus</url-pattern>
    </servlet-mapping>

    <!-- Session Timeout (optional) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
